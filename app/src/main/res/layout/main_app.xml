<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_app_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#d0fff8"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Listado de mangas"
        android:textSize="18sp"
        android:textColor="#333333"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/my_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingTop="10dp"
        android:background="#FFFFFF"
        tools:listitem="@android:layout/simple_list_item_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:background="#E0E0E0"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/footer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:paddingStart="8dp"
            android:paddingBottom="8dp"
            android:text="Elige un manga"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/btn_clear_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:minWidth="0dp"
            android:padding="12dp"
            android:text="Limpiar SelecciÃ³n"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_back_to_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver al Login"
            android:layout_marginHorizontal="8dp" />

    </LinearLayout>
</LinearLayout>